<%- include("partials/header.ejs") %>

<div class="container-fluid py-3">
    <div class="container py-3">
        <form action="/edit" method="post">
            <div class="w-50 m-auto border rounded-2 p-4 bg-white ">
            <div class="d-flex my-2 align-items-center">
            <label for="title">Title:</label>
            <input type="text" name="title" value="<%= title %>" id="title" placeholder="Add Title here" class="form-control ms-3">
            </div>
            <div class="d-flex my-2 align-items-center">
            <label for="category">Category:</label>
            <input type="text" name="category" value="<%= category %>" id="category" placeholder="Add Category here" class="form-control ms-3">
            </div>
            <div class="d-flex my-2 align-items-center">
            <label for="description">Description:</label>
            <textarea name="description" class="form-control ms-3"id="description"><%= description %></textarea>
            </div>
            <div class="d-flex my-3 mt-5 justify-content-around align-items-center">
            <button type="submit" class="btn btn-primary">Upload</button>
            </form>
            <form action="/" method="GET">
            <button class="btn btn-danger" type="submit">Cancel<span></button>
            </form>
            </div>
            </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>